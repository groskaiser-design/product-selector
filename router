<script>
  // –ë–µ–∑–æ–ø–∞—Å–Ω—ã–π —Ñ–æ–ª–±—ç–∫ Telegram API
  const tg = window.Telegram?.WebApp || {
    initData:'', initDataUnsafe:{}, ready:()=>{}, expand:()=>{},
    BackButton:{show:()=>{}, hide:()=>{}, onClick:()=>{}},
    HapticFeedback:{impactOccurred:()=>{}}, showAlert:m=>alert(m)
  };
  tg.ready(); tg.expand();

  // –ü–æ–¥—Å—Ç–∞–≤–ª—è–µ–º –¥–∞–Ω–Ω—ã–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
  (function(){
    const u = tg.initDataUnsafe?.user;
    const name = document.getElementById('userName');
    const id = document.getElementById('userId');
    const photo = document.getElementById('userPhoto');
    if(u){
      const full=[u.first_name,u.last_name].filter(Boolean).join(' ')||'–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å';
      name.textContent=full; id.textContent='ID: '+(u.id||'---');
      if(u.photo_url){ const img=new Image(); img.src=u.photo_url; img.alt=full; photo.textContent=''; photo.appendChild(img); }
      else photo.textContent=full.charAt(0).toUpperCase();
    } else {
      name.textContent='–ê–ª–µ–∫—Å–∞–Ω–¥—Ä –ü–µ—Ç—Ä–æ–≤'; id.textContent='ID: 123456789'; photo.textContent='–ê';
    }
  })();

  // ripple
  function ripple(el,e){
    const r=document.createElement('span'); r.className='r';
    const b=el.getBoundingClientRect();
    r.style.left=(e.clientX-b.left)+'px'; r.style.top=(e.clientY-b.top)+'px';
    el.appendChild(r); r.addEventListener('animationend',()=>r.remove(),{once:true});
  }

  // —É–Ω–∏–≤–µ—Ä—Å–∞–ª—å–Ω—ã–π —Ç–æ–≥–≥–ª–µ—Ä –≤–∞—Ä–∏–∞–Ω—Ç–∞
  function toggleVariant(rootId, cls){
    const grid=document.getElementById(rootId);
    const start=grid.querySelector('.start');
    const open=start.classList.toggle(cls);
    grid.classList.toggle('dim',open);
  }

  // –Ω–∞–≤–µ—à–∏–≤–∞–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏
  document.getElementById('startA').addEventListener('click',e=>{ripple(e.currentTarget,e);toggleVariant('gridA','open-a');});
  document.getElementById('startB').addEventListener('click',e=>{ripple(e.currentTarget,e);toggleVariant('gridB','open-b');});
  document.getElementById('startC').addEventListener('click',e=>{ripple(e.currentTarget,e);toggleVariant('gridC','open-c');});

  // –ø–µ—Ä–µ—Ö–æ–¥—ã (–≤ –¥–µ–º–æ –≤–µ–¥—ë–º –Ω–∞ —Ñ–∏–∫—Ç–∏–≤–Ω—ã–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã; –≤ –ø—Ä–æ–¥–µ ‚Äî –Ω–∞ –≤–∞—à–∏ —Ñ–∞–π–ª—ã)
  const go = (url)=>{ try{tg.HapticFeedback.impactOccurred('medium')}catch(_){ } window.location.href=url; };
  document.getElementById('aProducts').addEventListener('click',()=>go('products.html'));
  document.getElementById('aKbju').addEventListener('click',()=>go('kbju.html'));
  document.getElementById('bProducts').addEventListener('click',()=>go('products.html'));
  document.getElementById('bKbju').addEventListener('click',()=>go('kbju.html'));
  document.getElementById('cProducts').addEventListener('click',()=>go('products.html'));
  document.getElementById('cKbju').addEventListener('click',()=>go('kbju.html'));

  // –≤—ã–±–æ—Ä –≤–∞—Ä–∏–∞–Ω—Ç–∞ —á–µ—Ä–µ–∑ ?mode=a|b|c (–ø–æ —É–º–æ–ª—á–∞–Ω–∏—é c)
  (function selectByQuery(){
    const params=new URLSearchParams(location.search);
    const m=(params.get('mode')||'c').toLowerCase();
    const map={a:['gridA','open-a'],b:['gridB','open-b'],c:['gridC','open-c']};
    const pair=map[m]||map.c;
    toggleVariant(pair[0], pair[1]); // —Ä–∞—Å–∫—Ä—ã—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—ã–π –≤–∞—Ä–∏–∞–Ω—Ç
    // –ø—Ä–æ–∫—Ä—É—Ç–∫–∞ –∫ –≤—ã–±—Ä–∞–Ω–Ω–æ–º—É
    document.getElementById(pair[0]).scrollIntoView({behavior:'instant',block:'start'});
  })();
</script>
